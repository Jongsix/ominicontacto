FROM alpine:latest
ENV LANG en_US.utf8

RUN apk update
RUN apk add vim sngrep ngrep asterisk openrc openntpd
COPY asterisk-files/*.conf /etc/asterisk/
COPY asterisk-files/interfaces /etc/network/
COPY asterisk-files/audios/* /var/lib/asterisk/sounds/

EXPOSE 5060/udp 10000-10020/udp
ADD asterisk-files/docker-entrypoint.sh /docker-entrypoint.sh
RUN chmod +x /docker-entrypoint.sh
ENTRYPOINT ["/docker-entrypoint.sh"]
