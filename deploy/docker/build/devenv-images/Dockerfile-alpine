FROM alpine:latest
ENV LANG en_US.utf8
RUN apk update
RUN apk add git py-pip openssh vim rsyslog tzdata
#RUN apt-get install git python-pip sudo python-minimal vim net-tools dnsutils inetutils-ping openssh-server rsyslog tzdata -y
#RUN sed -i 's/#PermitRootLogin prohibit-password/PermitRootLogin yes/' /etc/ssh/sshd_config && service ssh restart
COPY systemctl.py /bin/systemctl
RUN chmod +x /bin/systemctl
RUN echo "root:toor123" | chpasswd

EXPOSE 443/tcp

